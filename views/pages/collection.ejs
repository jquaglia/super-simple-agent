<!DOCTYPE html>
<html lang="en">

  <%- include('../layout/head.ejs') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <%- include('../layout/header.ejs') %>
  <main>
    <h2>Collection of API Searches</h2>
    <section>
      <% for (let i=0; i < apis.length; i++){ %>
        <% let x=apis.length - i - 1; %>
          <ul class="ul collect-ul">
            <li>
              <%= apis[x].code_name %>
            </li>
            <li>
              <%= apis[x].url %>
            </li>
            <li>
              <%= apis[x].time_stamp %>
            </li>
            <li>
              <form class="saved-search search" action="/search" method="POST">
                <input type="hidden" name="search" value="<%= apis[x].url %>">
                <input class="search-button" type="submit" name="search" value="search">
              </form>
            </li>
          </ul>

          <% } %>
    </section>
    <footer>
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous"></script>
      <script src="/js/app.js"></script>
    </footer>
  </main>
</body>

</html>